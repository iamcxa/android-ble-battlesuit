<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".TestMainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOST "
        android:id="@+id/button_host"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JOIN"
        android:id="@+id/button_join"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/button_host" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="場次編號:\n目前玩家人數:"
        android:id="@+id/textView_gamestatus"
        android:layout_below="@+id/button_host"
        android:layout_alignParentStart="true" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重新整理"
        android:id="@+id/button_refresh"
        android:layout_below="@+id/textView_gamestatus"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button_CC" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/button_refresh"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="玩家一"
            android:id="@+id/textView_player1status"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="玩家2"
            android:id="@+id/textView_player2status"
            android:layout_weight="1" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="發射子彈(CC)"
        android:id="@+id/button_CC"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="模擬中彈(BB)"
        android:id="@+id/button_BB"
        android:layout_alignBottom="@+id/button_CC"
        android:layout_alignEnd="@+id/linearLayout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="初始化"
        android:id="@+id/textView_title"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/button_join" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="藍芽裝置"
        android:id="@+id/button_BLE"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Warning!!!!"
        android:id="@+id/textView_warning"
        android:textSize="57dp"
        android:textColor="#ffff0000"
        android:layout_marginBottom="50dp"
        android:layout_above="@+id/button_CC"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重置這場比賽"
        android:id="@+id/button_reset"
        android:layout_above="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout"
        android:layout_alignStart="@+id/button_BB" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="device address :"
        android:id="@+id/textView_deviceaddress"
        android:layout_above="@+id/button_CC"
        android:layout_alignParentStart="true" />

</RelativeLayout>
