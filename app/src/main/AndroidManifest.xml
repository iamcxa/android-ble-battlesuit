<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.geodoer.battlesuitcontroller" >

    <uses-permission android:name="android.permission.VIBRATE"/>

    <!-- Parse permissions-->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <!-- BLUETOOTH permissions-->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-feature android:name="android.hardware.bluetooth_le" android:required="true"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.DesignDemo" >

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- END -->

        <!-- Settings Activity -->
        <activity
            android:name=".view.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <!-- END -->

        <!-- Ble Main Activity -->
        <activity
            android:name="com.geodoer.bluetoothcontroler.BleMainActivity"
            android:label="@string/app_name" >
        </activity>
        <!-- END -->

        <activity android:name="com.geodoer.bluetoothcontroler.view.BleActivity"/>

        <!-- Parse Activity -->
        <activity
            android:name="com.geodoer.parsecontroller.TestMainActivity"
            android:label="@string/app_name" >
        </activity>
        <!-- END -->

        <!-- service -->
        <service android:name="com.geodoer.bluetoothcontroler.service.BluetoothLeService" android:enabled="true"/>
        <service android:name="com.geodoer.bluetoothcontroler.service.GeoBleService" android:enabled="true"/>
        <!-- END -->


    </application>

</manifest>
