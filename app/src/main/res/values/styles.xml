<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DesignDemo" parent="Base.Theme.DesignDemo">
    </style>

    <style name="Base.Theme.DesignDemo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:immersive">true</item>
        <item name="colorPrimary">#673AB7</item>
        <item name="colorPrimaryDark">#512DA8</item>
        <item name="colorAccent">#FF4081</item>
        <item name="android:windowBackground">@color/cardview_dark_background</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MyDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/c_white_smoke</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ListView" parent="@android:style/Widget.ListView">
        <item name="android:background">@color/cardview_dark_background</item>
        <item name="android:cacheColorHint">@color/c_orangered</item>
        <item name="android:divider">@color/c_reddevil</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:textColor">@color/c_white</item>
        <item name="android:listSelector">@drawable/list_item_selector</item>
    </style>


    <style name="carddemo_default_container_padding">
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:paddingLeft">@dimen/carddemo_keyline_1_minus_8dp</item>
        <item name="android:paddingRight">@dimen/carddemo_keyline_1_minus_8dp</item>
        <item name="android:paddingTop">@dimen/carddemo_keyline_1_minus_8dp</item>
        <item name="android:paddingBottom">@dimen/carddemo_keyline_1_minus_8dp</item>
    </style>

    <!-- Style for Shadow ******************************************************-->

    <!-- Style for Shadow Compound view-->
    <style name="card.shadow_outer_layout">
        <item name="android:layout_marginTop">@dimen/card_shadow_view_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/card_shadow_view_margin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/card_shadow_view_margin_left</item>
        <item name="android:layout_marginRight">@dimen/card_shadow_view_margin_right</item>
    </style>

    <!--Style for shadow image-->
    <style name="card.shadow_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/card_shadow_height</item>
        <item name="android:src">@drawable/card_shadow</item>
        <item name="android:layout_below">@+id/card_main_content_layout</item>
    </style>


</resources>
