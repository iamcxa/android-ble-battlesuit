<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/fragment_join_linearLayout"
                android:weightSum="1"
                android:padding="16dp"
                android:background="#00ffffff">
    <com.yalantis.taurus.PullToRefreshView
        android:id="@+id/pull_to_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00ffffff"
        android:layout_above="@+id/cbDialogOk">

        <ListView
            android:id="@+id/lvGameList"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:background="#ffffffff"
            android:padding="8dp"/>


    </com.yalantis.taurus.PullToRefreshView>

    <view
        class="at.markushi.ui.CircleButton"
        app:cb_color="@color/c_greenpigment"
        app:cb_pressedRingWidth="12dip"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:id="@+id/cbDialogOk"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.13"
        android:src="@drawable/ic_done_white_48dp"
        android:padding="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>

