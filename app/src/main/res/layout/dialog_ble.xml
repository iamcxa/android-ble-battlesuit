<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:id="@+id/layout">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:id="@+id/lvBleDevice"
        android:layout_below="@+id/btnDisconnect"
        android:layout_alignParentStart="true">

    </ListView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ScanStart"
        android:id="@+id/btnScan"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnDisconnect"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Connecting"
        android:id="@+id/btnDisconnect"
        android:layout_below="@+id/btnScan"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/txtScanning"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_alignBaseline="@+id/btnDisconnect"
        android:layout_alignBottom="@+id/btnDisconnect"
        android:layout_alignStart="@+id/txtConnect"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/txtConnect"
        android:textColor="#000000"
        android:layout_alignBaseline="@+id/btnScan"
        android:layout_alignBottom="@+id/btnScan"
        android:layout_toEndOf="@+id/btnScan"
        android:layout_marginStart="17dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="display:"
        android:id="@+id/txtShowMsg"
        android:layout_below="@+id/lvBleDevice"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
