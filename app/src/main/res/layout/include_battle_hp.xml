
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_margin="0dp"
    android:padding="20dp">
    <view
        android:layout_width="150dp"
        android:layout_height="150dp"
        class="com.geodoer.circularseekbar.CircularSeekBar"
        android:padding="0dp"
        android:id="@+id/barHp" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/ivHp"
        android:alpha="0.5"
        android:background="@drawable/ic_ring_hp_black_cube"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="false" />

    <com.db.circularcounter.CircularCounter
        xmlns:meter="http://schemas.android.com/apk/res-auto"
        android:id="@+id/meter"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:padding="5dp"
        meter:range="5"
        meter:textSize="70sp"
        meter:textColor="#D9C248"
        meter:metricSize="20sp"
        meter:metricText=""
        android:alpha="1"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>